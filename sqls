SELECT `pages`.`id`, MAX(`last_checked`) FROM `pages_status`, `pages` WHERE `pages_status`.`site_id`=`pages`.`id` GROUP BY `pages`.`id`


SELECT `status_code`,`last_working_time` from `pages_status` RIGHT JOIN (SELECT MAX(`last_checked`) AS `checked` FROM `pages_status`, `pages` WHERE `pages_status`.`site_id`=`pages`.`id` GROUP BY `pages`.`id`) AS `last_status` ON `pages_status`.`last_checked`=`last_status`.`checked` 


SELECT `pages`.`url`,`pages_status`.* from `pages`,`pages_status` RIGHT JOIN (SELECT MAX(`last_checked`) AS `checked` FROM `pages_status`, `pages` WHERE `pages_status`.`site_id`=`pages`.`id` GROUP BY `pages`.`id`) AS `last_status` ON `pages_status`.`last_checked`=`last_status`.`checked` WHERE `pages_status`.`site_id`=`pages`.`id` 

SELECT site.`url`, last_status.`status_code`, last_status.`last_checked`
FROM `pages` site
JOIN `pages_status` last_status ON site.`id` = last_status.`site_id`
LEFT JOIN `pages_status` not_last_status ON (
  site.`id` = `not_last_status`.`site_id` AND
  last_status.`last_checked` < not_last_status.`last_checked`
)
WHERE not_last_status.`site_id` IS NULL